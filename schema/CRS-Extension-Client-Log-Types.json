  "shared_rules": [
    {
      "ref": "FR-002",
      "rule": "Consent required before creating/submitting any log entry."
    },
    {
      "ref": "Definitions.timestamp_storage",
      "rule": "Store submitted_at_utc in UTC at Submit; display localized only."
    },
    {
      "ref": "NFR-007",
      "rule": "Deterministic demo: template-based note synthesis; static error strings."
    },
    {
      "ref": "FR-005",
      "rule": "Offline encrypted queue; max 50 queued submissions; auto-sync on connectivity restoration."
    },
    {
      "ref": "FR-011/FR-016",
      "rule": "All log-derived notes created as Pending Review drafts; therapist approval required for official record."
    },
    {
      "ref": "Non-Goals",
